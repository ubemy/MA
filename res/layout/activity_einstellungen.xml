<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/schiffeversenken"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ma.schiffeversenken.android.view.Einstellungen" >

    <CheckBox
        android:id="@+id/Lautlos_Checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="183dp"
        android:text="Lautlos" />

    <CheckBox
        android:id="@+id/Vibration_aus_Checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Lautlos_Checkbox"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/Lautlos_Checkbox"
        android:text="Vibration aus" />

    <SeekBar
        android:id="@+id/volumeSeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/Vibration_aus_Checkbox"
        android:layout_below="@+id/Vibration_aus_Checkbox"
        android:layout_marginTop="72dp" />

</RelativeLayout>
